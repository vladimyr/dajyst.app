@import "~spinkit/css/spinners/3-wave.css"
@import "font/icomoon.css"

$font-size = 12px
$post-margin = 20px

$accent-color = #cc664f
$post-accent-border = 1px solid $accent-color
$post-accent-color = #ffe8dd

$bg-color = #e9ebee
$timestamp-color = #90949c
$fb-link-color = #4267b2

.spinner
  position absolute
  font-size 0
  width 100%

  .sk-rect
    margin-right 2px
    background $accent-color

.loading-msg
  font-family Helvetica, Arial, sans-serif;
  font-size 12px;
  margin 10px;
  color $accent-color;

.output
  margin 0 auto
  max-width 502px
  display none

html, body
  margin 0
  padding 0
  width 100%
  height 100%
  background $bg-color

.btn
  display inline-block
  cursor pointer
  color $fb-link-color
  text-decoration none
  padding 2px 4px
  border-bottom 1px solid $fb-link-color
  font-size $font-size
  font-weight bold

  &:hover
    background-color $fb-link-color
    color #fff

.post
  font-family Helvetica, Arial, sans-serif
  padding 12px
  margin $post-margin
  border 1px solid
  border-color #e5e6e9 #dfe0e4 #d0d1d5
  border-radius 3px
  background-color #fff
  color #1d2129

  .btn-phone
    display none

  .timestamp
    color $timestamp-color
    font-size $font-size

  .content
    font-family 'Roboto', sans-serif
    color #5f5d5d
    margin 1em 0 1em
    font-size 14px
    font-weight normal
    line-height 1.38
    white-space pre-wrap

    .menu
      margin 0
      padding 0
      list-style none
      white-space normal

    .offer
      word-break break-word

    .price
      font-weight 700
      padding-left 4px

.post.standard .content
  border-left 5px solid lighten($fb-link-color, 40%)
  background #f4f7fb
  padding 4px 6px

.post.menu.today
  border $post-accent-border
  border-radius 0
  background $post-accent-color

  .btn-phone
    display inline-block
    float right

  .timestamp
    color #d04318

  .content
    color #424040
